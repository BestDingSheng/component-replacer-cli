{
  "name": "component-replacer-cli",
  "version": "1.0.1",
  "description": "CLI tool to replace and format React components in a file or directory",
  "main": "dist/index.js",
  "bin": {
    "component-replacer-cli": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BestDingSheng/component-replacer-cli.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "publish": "npm run build && npm uninstall -g component-replacer-cli && npm install -g ."
  },
  "dependencies": {
    "@babel/generator": "^7.21.5",
    "@babel/parser": "^7.21.5",
    "@babel/traverse": "^7.21.5",
    "@babel/types": "^7.21.5",
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "prettier": "^2.8.8"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/babel__generator": "^7.6.4",
    "@types/babel__traverse": "^7.18.5",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "semantic-release": "^21.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "."
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/**"
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ],
    "preset": "angular"
  },
  "publishConfig": {
    "access": "public"
  }
}
